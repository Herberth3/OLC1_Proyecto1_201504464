using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace _LFP_Proyecto2
{
    class Token_Error
    {
        public enum TipoError
        {
            LEXICO,
            SINTACTICO
        }

        private string caracterError;
        private TipoError tipoTokenError;
        private string descripcionError;
        private int filaTokenError;
        private int columnaTokenError;

        public Token_Error(string c, TipoError tipo, string descripcion, int fila, int columna)
        {
            this.caracterError = c;
            this.tipoTokenError = tipo;
            this.descripcionError = descripcion;
            this.filaTokenError = fila;
            this.columnaTokenError = columna;
        }

        public string getCaracterError() { return caracterError; }

        public TipoError GetTipoError() { return tipoTokenError; }

        public string getDescripcionerror() { return descripcionError; }

        public int getFilaError() { return filaTokenError; }

        public int getColumnaError() { return columnaTokenError; }

        public string getTipoTokenErrorEnString()
        {
            string nombreErrorToken = "";
            switch (tipoTokenError)
            {
                case TipoError.LEXICO:
                    nombreErrorToken = "Lexico";
                    break;
                case TipoError.SINTACTICO:
                    nombreErrorToken = "Sintactico";
                    break;
            }
            return nombreErrorToken;
        }
    }
}



from Token import Token
from Token import Tipo
